{
	"name": "all-contributors-for-repository",
	"version": "0.4.0",
	"description": "Generates an allcontributors list for an existing repository. ðŸ¤",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/JoshuaKGoldberg/all-contributors-for-repository.git"
	},
	"license": "MIT",
	"author": {
		"name": "JoshuaKGoldberg",
		"email": "npm@joshuakgoldberg.com"
	},
	"type": "module",
	"main": "lib/index.js",
	"files": [
		"LICENSE.md",
		"README.md",
		"lib/",
		"package.json"
	],
	"scripts": {
		"build": "tsup",
		"format": "prettier .",
		"lint": "eslint . --max-warnings 0",
		"lint:knip": "knip",
		"lint:md": "markdownlint \"**/*.md\" \".github/**/*.md\" --rules sentences-per-line",
		"lint:packages": "pnpm dedupe --check",
		"lint:spelling": "cspell \"**\" \".github/**/*\"",
		"prepare": "husky",
		"test": "vitest",
		"tsc": "tsc"
	},
	"lint-staged": {
		"*": "prettier --ignore-unknown --write"
	},
	"dependencies": {
		"co-author-to-username": "^0.1.3",
		"conventional-commits-parser": "^6.2.0",
		"description-to-co-authors": "^0.3.0",
		"octokit": "^5.0.3",
		"octokit-from-auth": "^0.3.2"
	},
	"devDependencies": {
		"@eslint-community/eslint-plugin-eslint-comments": "4.6.0",
		"@eslint/js": "10.0.1",
		"@release-it/conventional-changelog": "10.0.1",
		"@types/conventional-commits-parser": "5.0.1",
		"@types/eslint-plugin-markdown": "2.0.2",
		"@types/node": "24.10.0",
		"@vitest/coverage-v8": "4.0.1",
		"@vitest/eslint-plugin": "1.6.1",
		"console-fail-test": "0.6.0",
		"create-typescript-app": "2.46.3",
		"cspell": "9.7.0",
		"eslint": "10.0.0",
		"eslint-plugin-jsdoc": "62.7.0",
		"eslint-plugin-jsonc": "3.1.0",
		"eslint-plugin-markdown": "5.1.0",
		"eslint-plugin-n": "17.24.0",
		"eslint-plugin-package-json": "0.89.0",
		"eslint-plugin-perfectionist": "5.6.0",
		"eslint-plugin-regexp": "3.0.0",
		"eslint-plugin-yml": "3.3.0",
		"husky": "9.1.7",
		"knip": "5.85.0",
		"lint-staged": "16.2.3",
		"markdownlint": "0.40.0",
		"markdownlint-cli": "0.47.0",
		"prettier": "3.8.0",
		"prettier-plugin-curly": "0.4.0",
		"prettier-plugin-packagejson": "3.0.0",
		"prettier-plugin-sh": "0.18.0",
		"release-it": "19.2.0",
		"sentences-per-line": "0.3.0",
		"tsup": "8.5.0",
		"typescript": "5.9.3",
		"typescript-eslint": "8.56.0",
		"vitest": "4.0.1"
	},
	"packageManager": "pnpm@10.30.0",
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"provenance": true
	}
}
